<h1><%= @cocktail.name %></h1>

<ul class="ingredients">
  <% @cocktail.doses.each do |dose| %>
    <li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %>
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, cocktail_dose_path(@cocktail, dose), method: 'delete'%></li>

  <% end %>
</ul>


<h3>Add a dose for this drink...</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
    <%= f.input :description %>
    <%= f.association :ingredient, prompt: "What ingredient", class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<p><%= link_to "Go back to Cocktails", cocktails_path %></p>
